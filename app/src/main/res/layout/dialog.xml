<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_view"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <com.dawn.java.ui.widget.TopToolbar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mainTitle="@string/dialog_server_title"
        app:srcLeftIcon="@mipmap/ic_launcher_round">
    </com.dawn.java.ui.widget.TopToolbar>

    <EditText
        android:id="@+id/text_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:padding="12dp"
        android:layout_margin="30dp"
        android:background="@drawable/border_text_scan_result"
        android:hint="输入服务器IP"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/text_port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:padding="12dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/border_text_scan_result"
        android:hint="输入端口"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
    <Button
        android:id="@+id/btn_save"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="25dp"
        android:background="@drawable/selector_btn_blue"
        android:textColor="@color/white"
        android:text="保存" />
    <Button
        android:id="@+id/btn_close"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="25dp"
        android:background="@drawable/selector_btn_blue"
        android:textColor="@color/white"
        android:text="关闭" />
    </LinearLayout>
</LinearLayout>