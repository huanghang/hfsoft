<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.VersionShowActivity"
    android:orientation="vertical">

    <com.dawn.java.ui.widget.TopToolbar
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mainTitle="高爆设置"
        app:srcLeftIcon="@drawable/icon_return" />

    <Switch
        android:id="@+id/highlight_enable"
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"

        android:padding="20dp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="@string/menu_item_highlight_enable"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/layout_frames">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text="帧数"
            android:textColor="@color/black"
            android:textSize="17sp" />
        <EditText
            android:id="@+id/et_frames"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:maxLength="3"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:imeOptions="actionDone"
            android:inputType="number" />

    </LinearLayout>
    <Button
        android:id="@+id/btn_frames"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="@color/white"
        android:layout_margin="16dp"
        android:textSize="18sp"
        android:background="@drawable/selector_btn_blue"
        android:text="设置帧数"/>


</LinearLayout>